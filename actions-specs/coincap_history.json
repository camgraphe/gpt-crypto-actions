{
  "openapi": "3.1.0",
  "info": {
    "title": "CoinCap History (public)",
    "version": "1.0.0",
    "description": "Historical price points for an asset id."
  },
  "servers": [ { "url": "https://api.coincap.io/v2" } ],
  "paths": {
    "/assets/{id}/history": {
      "get": {
        "summary": "Historical price for an asset id",
        "operationId": "coincap_history_get",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "example": "bitcoin" },
            "description": "CoinCap asset id (lowercase)"
          },
          {
            "name": "interval",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["m1","m5","m15","m30","h1","h2","h6","h12","d1"],
              "default": "d1"
            },
            "description": "Sampling interval"
          },
          {
            "name": "start",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "format": "int64" },
            "description": "Unix time in milliseconds (inclusive)"
          },
          {
            "name": "end",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "format": "int64" },
            "description": "Unix time in milliseconds (exclusive)"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "type": "object", "additionalProperties": true }
              }
            }
          }
        }
      }
    }
  }
}
